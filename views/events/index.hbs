<h3>All Upcoming Events </h>
    <br>
    <br>
    <div class="row">
        {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h4>{{title}}</h4>
                    <p>{{ stripTags (truncate body 150) }}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/events/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/events/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
        {{else}}
        <p>No events to display</p>
        {{/each}}
    </div>